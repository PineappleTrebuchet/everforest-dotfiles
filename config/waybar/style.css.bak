@define-color font-color #d4be98;
@define-color black #282828;
@define-color grey #323232;

@define-color red #c22e29;
@define-color orange #d96e26;
@define-color yellow #d79921;
@define-color green #98971a;
@define-color blue #458588;
@define-color purple #b16286;

* {
  /* font-family: "DroidSansMNerdFont", monospace; */
  font-family: "JetBrainsMonoNerdFont", monospace;
  font-size: 16px;
  /*padding: 1px 0px 2px 0px;*/
}


window#waybar { 
  background-color: @black; 
  color: @font-color;
  border-bottom: 1px solid @grey;
}

tooltip {
	border-radius: 0px;
	border: none;
}

#workspaces {
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
}

#workspaces button {
	background: transparent;
	border: none;
	padding: 0px 10px 0px 10px;
 	min-width: 1px;
	color: @font-color;
	border-radius: 0px;
}

#workspaces button.focused { 
	background-color: @grey;
	color: @font-color;
	border-radius: 0px;
}
#workspaces button.urgent{
  color: @orange;
}

/*kys default hover effects*/
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
	transition: none;
	border-radius: 0px;
}

#mode {
	color: @red;
  padding: 0px 5px 0px 5px;
  margin: 0px 5px 0px 5px;
}

#power-profiles-daemon, #cpu, #memory, #network, #temperature, #backlight, #pulseaudio, #battery {
  margin: 0px 12px 0px 12px;
}

#tray {
	margin: 0px 7px 0px 5px;
}

#idle_inhibitor {
	padding: 0px 10px 0px 9px;
	margin: 0px 8px 0px 0px;
}

#scratchpad {
  padding: 0px 4px 0px 4px;
}

#custom-swaync {
  padding: 0px 10px 0px 7px;
	margin: 0px 4px 0px 0px;
	font-size: 20px;
}

#window {
  padding: 0px 4px 0px 9px;
}

#clock {
	margin: 0px 15px 0px 75px;
  padding: 0px 8px 0px 8px;
}

#battery.critical:not(.charging) {
  color: @red;
}

#temperature.critical {
  color: @red;
}

#network.disconnected {
  color: @red;
}

#pulseaudio.muted{
  color: @red;
}

#custom-cava {
	color: @font-color;
	margin: 0px 8px 0px 8px;
}
